@model KisiselWebSitesi.Models.HomePage
@{
    ViewBag.Title = "GetHomePage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Update Home Page</h2>
<hr />

@using (Html.BeginForm("HomePageUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Profile)
    @Html.TextBoxFor(x => x.Profile, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Contact)
    @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>

}